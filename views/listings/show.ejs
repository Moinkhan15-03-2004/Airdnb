<% layout("/layouts/boilerplate") %>
<body style="background-color: pink;">
    

    <div class="row mt-3">
        <div class="col-8 offset-2">


            <h3>Listing Details</h3>
    <div class="card">
        <img src="<%= listing.image %>" alt="Moin khan" class="card-img-top " style="height: 30vh;" width="10vh">
       <div class="card-body">
        <p class="card-text"><%= listing.title %><br>
            <%= listing.description %><br>
            &#8377:<%= listing.price %><br>
            <%= listing. location %><br>
            <%= listing.country %><br>
        
        
        </p>
       </div>
    </div>

    <br>
    <div class="btns" style="display: flex;">

   

        <a href="/listings/<%= listing._id %>/edit" class="btn btn-success  offset-2">Edit</a>
  
    

        <form method="post" action="/listings/<%=listing._id%>?_method=DELETE"><br>
         <button class="btn btn-danger  offset-3">Delete</button>
        </form>
    </div>
    
</div>
</div>
</body>

